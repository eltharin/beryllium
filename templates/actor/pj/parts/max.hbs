        <input type="text" name="system.magie.fletrine.niveaux.3.max" value="{{system.magie.fletrine.niveaux.3.max}}" class="pj-sheet-input" placeholder=""/>
      </div>
      <div class="line">
        <label>N5</label>
        <input type="text" name="system.magie.fletrine.niveaux.4.max" value="{{system.magie.fletrine.niveaux.4.max}}" class="pj-sheet-input" placeholder=""/>
      </div>
    </div>
  </div>
</section>