<div class="image">
    <img data-action="editImage" data-edit="img" src="{{document.img}}" alt="Photo de {{document.name}}" />
</div>
<div class="stress">
    <div class="title"><h3>Stress</h3></div>
    <div class="stress-physique">
        <div class="controls">
            <span><button class="updateStress" data-stress="physique" data-steesssens="-">-</button></span>
            <label>{{localize "beryllium.pjsheet.stress.physique"}} : {{system.stress.physique.value}}</label>
            <span><button class="updateStress" data-stress="physique" data-steesssens="+">+</button></span>
        </div>
        <div class="values">
            {{#times stress.physique.valcheck}}
                <span>
                    <svg  class="active" width="24" height="24" viewBox="0 0 1792 1792" xmlns="http://www.w3.org/2000/svg">
                        <path d="M1664 416v960q0 119-84.5 203.5T1376 1664H416q-119 0-203.5-84.5T128 1376V416q0-119 84.5-203.5T416 128h960q119 0 203.5 84.5T1664 416z"/>
                    </svg>
                </span>
            {{/times}}
            {{#times stress.physique.valnoncheck }}
                <span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect width="18" height="18" x="3" y="3" rx="2" />
                    </svg>
                </span>
            {{/times}}
        </div>
    </div>
